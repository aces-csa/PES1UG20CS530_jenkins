pipeline {
agent any
stages {
 stage ('Clone reposiory'){
 steps{
  git branch : 'main',
  url : 'https://github.com/aces-csa/PES1UG20CS530_jenkins.git'
}
 }



stage( 'Build application') {
steps {
sh 'g++ hello_world.cpp'
}
}
stage( 'Test application') {
steps{
sh './a.out'
sh 'failure ' 
}
}
post{
    failure{
         echo "pipeline failed "
    }
}
}
}
 
